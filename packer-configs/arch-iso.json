{
    "variables": {
        "iso_checksum": "",
        "output_dir": "output-{{timestamp}}",
        "ssh_public_key": ""
    },
    "builders": [{
        "type": "qemu",
        "iso_url": "https://mirror.rackspace.com/archlinux/iso/latest/archlinux-x86_64.iso",
        "iso_checksum": "{{user `iso_checksum`}}",
        "output_directory": "{{user `output_dir`}}",
        "disk_size": 10240,
        "format": "raw",
        "headless": true,
        "ssh_username": "root",
        "ssh_password": "root",
        "ssh_wait_timeout": "20m",
        "boot_wait": "10s",
        "boot_command": [
            "<enter><wait>",
            "/usr/bin/loadkeys us<enter><wait>",
            "mkdir -p /root/.ssh<enter><wait>",
            "echo '{{user `ssh_public_key`}}' >> /root/.ssh/authorized_keys<enter><wait>",
            "chmod 600 /root/.ssh/authorized_keys<enter><wait>",
            "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config<enter><wait>",
            "echo 'PasswordAuthentication yes' >> /etc/ssh/sshd_config<enter><wait>",
            "systemctl restart sshd<enter><wait>",
            "passwd<enter><wait>",
            "root<enter><wait>",
            "root<enter><wait>",
            "<enter>",
            "systemctl status sshd<enter><wait>"
        ]
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "echo 'root:root' | chpasswd",
            "pacman -Sy --noconfirm git python",
            "git clone https://github.com/benjisho/arch-iso-test.git /tmp/arch-iso-test",
            "cd /tmp/arch-iso-test && python install.py > /tmp/install.log 2>&1 || { echo 'Install failed'; cat /tmp/install.log; exit 1; }"
        ]
    }]
}
